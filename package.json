{
  "name": "@danehansen/sprite",
  "version": "0.1.0",
  "description": "sprite",
  "main": "index.js",
  "scripts": {
    "test": "mocha --compilers js:babel-register -w",
    "coverage": "nyc mocha --compilers js:babel-register",
    "coverage-report": "nyc --reporter=html mocha --compilers js:babel-register",

    "_test": "mocha --compilers js:babel-register",
    "_babel": "babel src/Sprite.js --out-file index.js",
    "max": "npm run _test && npm run _babel",

    "_babel_min": "babel src/danehansen-Sprite.js --out-file danehansen-Sprite.min.js",
    "_webpack_min": "webpack danehansen-Sprite.min.js danehansen-Sprite.min.js --define __BROWSER__=true",
    "_uglify_min": "uglifyjs danehansen-Sprite.min.js -o danehansen-Sprite.min.js -c dead_code,unused -m",
    "min": "npm run _babel_min && npm run _webpack_min && npm run _uglify_min",

    "prepublish": "npm run _babel",
    "everything": "npm run coverage-report && npm run max && npm run min",
    "git": "git add -A && git commit --amend && git push -f origin master",
    "pub": "npm run everything && npm run git && npm publish --access public"
  },
  "keywords": [
    "animation",
    "gsap",
    "GreenSock",
    "sprite",
    "spritesheet",
    "timeline",
    "TweenLite"
  ],
  "author": "Dane Hansen <dane@danehansen.com> (http://www.danehansen.com/)",
  "license": "MIT",
  "devDependencies": {
    "@danehansen/math": "latest",
    "@danehansen/package-helpers": "latest",
    "babel-cli": "^6.22.2",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-0": "^6.16.0",
    "babel-register": "^6.18.0",
    "chai": "^3.5.0",
    "jsdom": "^9.11.0",
    "jsdom-global": "^2.1.1",
    "mocha": "^3.2.0",
    "nyc": "^10.1.2",
    "sinon": "^1.17.7",
    "uglify-js": "^2.7.5",
    "webpack": "^1.14.0"
  },
  "dependencies": {
    "@danehansen/event-dispatcher": "latest",
    "gsap": "^1.19.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/danehansen/Sprite"
  }
}
